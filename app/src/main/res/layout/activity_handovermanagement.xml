<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="96px">

    </com.qmuiteam.qmui.widget.QMUITopBar>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEDED">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="615px"
            android:layout_marginTop="32px"
            android:background="#F9F9F9"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="40px">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32px"
                    android:text="房主用户名"
                    android:textColor="#666666"
                    android:textSize="@dimen/textSize_28px" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="500px"
                    android:layout_height="88px"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/tv_name"
                    android:background="@drawable/exittext_rectangle"
                    android:paddingLeft="32px"
                    android:hint="请输入房主用户名"
                    android:textColorHint="#DDDDDD" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22px"
                android:text="注：锁具只与房主手机进行一对一捆绑，锁具管理员是唯一"
                android:textColor="#999999"
                android:textSize="24px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="22px">

                <TextView
                    android:id="@+id/tv_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32px"
                    android:text="房主密码"
                    android:textColor="#666666"
                    android:textSize="@dimen/textSize_28px" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="500px"
                    android:layout_height="88px"
                    android:layout_marginLeft="46px"
                    android:paddingLeft="32px"
                    android:layout_toRightOf="@+id/tv_pw"
                    android:background="@drawable/exittext_rectangle"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:hint="请输入房主登录密码"
                    android:textColorHint="#DDDDDD" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="22px">

                <TextView
                    android:id="@+id/lock_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32px"
                    android:text="锁具码"
                    android:textColor="#666666"
                    android:textSize="@dimen/textSize_28px" />

                <EditText
                    android:id="@+id/et_keyAdmin"
                    android:layout_width="500px"
                    android:layout_height="88px"
                    android:layout_marginLeft="74px"
                    android:paddingLeft="32px"
                    android:layout_toRightOf="@+id/lock_pw"
                    android:background="@drawable/exittext_rectangle"
                    android:hint="请输入锁具码"
                    android:textColorHint="#DDDDDD" />

            </com.zhy.autolayout.AutoRelativeLayout>
            
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_unBundling"
                android:layout_width="269px"
                android:layout_height="96px"
                android:layout_marginTop="40px"
                android:layout_gravity="center_horizontal"
                app:qmui_borderColor="@color/color_green"
                app:qmui_backgroundColor="@color/color_green"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_28px"
                android:text="解绑"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23px"
                android:text="注：更换新锁主即清空锁具设置信息"
                android:textSize="24px"
                android:textColor="#999999"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>