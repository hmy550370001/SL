<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="32px"
    android:layout_marginRight="32px"
    android:layout_marginTop="32px"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8px"
    app:cardElevation="5px">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/item_icon"
            android:layout_width="104px"
            android:layout_height="104px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:src="@mipmap/lock_tx"/>
        
        
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="157px"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/device_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29px"
                android:text="美年1101室"
                android:textColor="#333333"
                android:textSize="32px"
                android:typeface="sans" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30px">

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/countdown"/>

                <TextView
                    android:id="@+id/device_remaining_lease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18px"
                    android:text="剩余租期："
                    android:textColor="#666666"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="31px"
            android:layout_marginTop="19px">

            <ImageView
                android:layout_width="30px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/electricity"/>

            <TextView
                android:id="@+id/device_remaining_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18px"
                android:text="剩余电量："
                android:textColor="#666666"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next" />

    </com.zhy.autolayout.AutoRelativeLayout>
</android.support.v7.widget.CardView>
